<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_no_code_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/_8dp"
    android:paddingVertical="@dimen/_8dp">

    <ImageView
        android:id="@+id/iv_flag"
        android:layout_width="@dimen/_40dp"
        android:layout_height="@dimen/_26dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/flag_india"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_country"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8dp"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="@dimen/_16sp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/text_color"
        android:text="India"
        android:layout_marginHorizontal="@dimen/_14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_flag"
        app:layout_constraintEnd_toStartOf="@+id/iv_arrow"/>

    <ImageView
        android:id="@+id/iv_arrow"
        style="@style/actionBarItemBackground"
        android:layout_width="@dimen/_26dp"
        android:layout_height="@dimen/_26dp"
        android:layout_marginStart="@dimen/_4dp"
        app:srcCompat="@drawable/ic_arrow_drop_down"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/icon_tint_color" />

</androidx.constraintlayout.widget.ConstraintLayout>